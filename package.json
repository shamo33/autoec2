{
  "name": "autoec2",
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "author": "shamo33",
  "private": true,
  "main": "build/main/main.js",
  "packageManager": "yarn@4.1.1",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "build": "yarn run build:el-main && yarn run build:el-preload && yarn run build:el-frontend",
    "build:el-main": "yarn workspace el-main run build",
    "build:el-preload": "yarn workspace el-preload run build",
    "build:el-frontend": "yarn workspace el-frontend run build",
    "clean": "rimraf build dist",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "org.mystia.shamo33.autoec2",
    "productName": "autoec2",
    "copyright": "Copyright Â© 2024 shamo33",
    "asar": true,
    "files": [
      "build"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage"
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "zip"
        }
      ]
    }
  }
}
